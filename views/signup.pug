extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Create your account
            form.form.form--signup
                .form__group
                    label.form__label(for='email') Name
                    input#sign-up-name.form__input(type='text', placeholder='John Smith', required)
                .form__group
                    label.form__label(for='email') Email address
                    input#sign-up-email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#sign-up-password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    label.form__label(for='email') Confirm Password
                    input#sign-up-password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn.btn--green Sign Up